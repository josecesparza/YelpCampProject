<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Editing <%= foundUser.username %>'s profile</h1>
        <div style="width: 30%; margin: 25px auto;">

            <form action="/user/<%= foundUser._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="user[name]" value="<%= foundUser.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[surnames]" value="<%= foundUser.surnames %>">
                </div>
                <button class="btn btn-lg btn-primary btn-block">Update</button>
            </form>
            <a href="/user/<%= foundUser._id %>">Go back</a>
        </div>
    </div>

    <% include ../partials/footer %>